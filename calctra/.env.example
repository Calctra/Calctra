# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/calctra

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PRIVATE_KEY=your_private_key_here

# Resource Matching Contract
RESOURCE_MATCHING_CONTRACT_ADDRESS=your_contract_address_here

# Token Contract
TOKEN_CONTRACT_ADDRESS=your_contract_address_here

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50 # in MB

# Logging
LOG_LEVEL=info
LOG_FILE=logs/calctra.log

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_HOMOMORPHIC_ENCRYPTION=true
ENABLE_RESOURCE_MATCHING=true

# API Keys
COMPUTE_PROVIDER_API_KEY=your-compute-provider-api-key

# Encryption Keys
HOMOMORPHIC_PUBLIC_KEY=your-public-key
HOMOMORPHIC_PRIVATE_KEY=your-private-key

# Token Program
TOKEN_PROGRAM_ID=your-spl-token-program-id
TOKEN_MINT_ADDRESS=your-cal-token-mint-address 